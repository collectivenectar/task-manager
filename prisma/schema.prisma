datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
  categories Category[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      TaskStatus
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  position    Int      // For drag and drop ordering within category
}

model Category {
  id        String   @id @default(cuid())
  name      String
  position  Int      // For drag and drop ordering of categories
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  tasks     Task[]
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
}